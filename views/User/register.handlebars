<article class="register">
    <form action="/user/register" method="POST" class="register-box" enctype="multipart/form-data">
        <h1>Create an Account</h1>
        <div class="input">
            <label>First Name</label>
            <input type="text" id="firstName" name="firstName">
        </div>
        <div class="input">
            <label>Last Name</label>
            <input type="text" id="lastName" name="lastName">
        </div>
        <div class="input">
            <label>Email</label>
            <input type="email" id="email" name="email">
        </div>
        <div class="input">
            <label>Password</label>
            <input type="password" id="password" name="password">
        </div>
        <div class="input">
            <label>Confirm Password</label>
            <input type="password" id="cpassword" name="cpassword">
        </div>
            <label>Upload File</label>
            <input type="file" class="profile" name="profilePic" id="profilePic"> <br><br>

        <input type="submit" class="register-btn" value="Register">
        
        <div class="register-account">
            <a href="/User/login">Already have an account?<br>     Login</a>
        </div>
    </form>
</article>

